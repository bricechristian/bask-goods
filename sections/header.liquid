<header class="header fixed z-50 top-0 left-0 w-full">


    {% render 'announcement-bar' %}

    <nav>
        <div class="header__main py-6 text-cream">
            <div class="container-full grid grid-cols-[1fr_55px_1fr] gap-6 items-center">
                <div>
                    <ul class="flex items-center space-x-8">
                        <li class="relative">
                            <svg xmlns="http://www.w3.org/2000/svg" id="hamburger" class="w-8 cursor-pointer active" viewBox="0 0 31 22"><g fill="none" fill-rule="evenodd" stroke-linecap="square"><path d="M.5.5h30M.5 11h30M.5 21h30"/></g></svg>
                            <span id="hamburger-close" class="font-matter text-13 absolute-center left-0 text-black">Close</span>
                        </li>
                        <li class="relative">
                            <a href="#" id="header-shop-link" class="header__link font-matter text-13 hover:text-orange">Shop</a>
                        </li>
                    </ul>
                </div>
                <div class="text-center">
                    <svg class="header__logo" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 55 55"><defs><path d="M.65 25.277 0 24.643c1.625-1.588 5.866-3.543 10.83-4.201 3.77-.505 7.174-.137 9.962 1.03L.924 2.041l.651-.636 19.868 19.433c-1.195-2.729-1.568-6.057-1.056-9.744C21.062 6.237 23.06 2.089 24.684.5l.648.637c-1.478 1.444-3.394 5.468-4.035 10.078-.433 3.116-.564 8.929 3.418 12.824l-.65.636c-3.983-3.897-9.922-3.764-13.111-3.345-4.712.628-8.826 2.503-10.304 3.947Zm53.7 0c-1.478-1.444-5.592-3.319-10.304-3.947-3.19-.42-9.13-.552-13.111 3.345l-.65-.636c3.982-3.895 3.85-9.707 3.416-12.824-.64-4.61-2.556-8.634-4.034-10.078l.65-.637c2.74 2.679 6.483 12.894 3.25 20.329L53.423 1.405l.65.636-19.866 19.433c2.787-1.169 6.188-1.537 9.962-1.032 4.964.658 9.205 2.613 10.83 4.2l-.65.635ZM30.317 54.5l-.65-.637c3.089-3.021 7.538-16.134.618-22.902l.65-.636c3.983 3.898 9.926 3.765 13.111 3.344 4.712-.627 8.826-2.502 10.304-3.946l.65.634c-1.625 1.588-5.866 3.542-10.83 4.201-3.774.504-7.175.135-9.962-1.032L54.075 52.96l-.651.636-19.858-19.424c3.234 7.435-.509 17.65-3.249 20.329Zm-5.633 0c-1.624-1.588-3.622-5.737-4.297-10.593-.512-3.687-.139-7.017 1.056-9.745L1.575 53.595l-.65-.636 19.867-19.434c-2.788 1.168-6.191 1.537-9.962 1.033-4.964-.66-9.205-2.613-10.83-4.2l.65-.635c1.478 1.444 5.592 3.319 10.304 3.946 3.19.42 9.13.552 13.111-3.344l.65.636c-3.982 3.895-3.851 9.708-3.418 12.825.641 4.61 2.557 8.633 4.035 10.077l-.648.637Z" id="a"/></defs><use fill="#FBF1DC" xlink:href="#a" fill-rule="evenodd"/></svg>
                </div>
                <div>
                    <ul class="flex items-center justify-end space-x-8">
                        <li><a href="#" class="header__link font-matter text-13 hover:text-orange">Account</a></li>
                        <li><a href="#" id="header-search-link" class="header__link font-matter text-13 hover:text-orange">Search</a></li>
                        <li><a href="#" id="bag-count" class="header__link font-matter text-13 hover:text-orange">0</a></li>
                    </ul>            
                </div>
            </div>
        </div>
        {% if linklists.main-menu.links != blank %} 
            {% assign has_shop_links = false %}
            {% for link in linklists.main-menu.links %}
                {% if link.title == 'Shop' and link.links != blank %}
                    {% assign has_shop_links = true %}
                {% endif %}
            {% endfor%}
            {% if has_shop_links %}
                <div class="header__categories -mt-8 pb-6 w-full absolute left-0">
                    <div class="container-full flex">
                        <ul class="grid grid-cols-2 grid-rows-3 grid-flow-col-dense gap-x-16 pl-[62px]">
                            {% for link in linklists.main-menu.links %}
                                {% if link.title == 'Shop' %}
                                    {% for child_link in link.links %}
                                        <li><a href="{{ child_link.url }}" class="header__link font-matter text-13">{{ child_link.title }}</a></li>
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}
                        </ul> 
                    </div>
                </div>      
            {% endif %}
            <div class="header__menu -mt-8 w-full absolute left-0">
                <div class="container-full flex">
                    <ul class="header__menu-top flex flex-wrap gap-x-16 py-6 border-t border-t-black w-full">
                        {% for link in linklists.main-menu.links %}
                            <li class="relative">
                                <a href="{{ link.url }}" class="header__link font-matter text-13{% if link.links != blank %} has-submenu{% endif %}">{{ link.title }}</a>
                                {% if link.links != blank %}
                                    <ul class="header__submenu absolute left-0 grid grid-cols-5 gap-8 mt-6 pb-6">
                                        {% for child_link in link.links %}
                                            <li>
                                                <a href="#">
                                                    <img src="https://via.placeholder.com/400x460" class="w-full mb-2" />
                                                    <div><span class="font-italic">{{ child_link.title }} </span>â€”</div>
                                                </a> 
                                            </li>    
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
        <div class="header__search -mt-8 pb-6 w-full absolute left-0">
            <div class="container-full flex">
                <form action="{{ routes.search_url }}" method="get" class="form w-full" role="search" autocomplete="off">
                    <input type="search" name="q" value="" class="form__input font-heading text-24 pt-6 mt-4 border-t border-black w-full bg-transparent" maxlength="256" autocomplete="off" placeholder="Search..." required="">
                    {% comment %} <input type="submit" value="Submit" class="search-bar-submit"> {% endcomment %}
                </form>
            </div>
        </div>           
    </nav>

</header>

<div class="header__overlay fixed z-40 top-0 left-0 h-full w-full"></div>