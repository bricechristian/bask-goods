<div class="account">
  <div class="container">
    <div class="inner">
      
      <h1 class="text-center">Activate Account</h1>
      
      <p class="text-center">Create your password to activate your account</p>
      
      {% form 'activate_customer_password' %}
      
        {{ form.errors | default_errors }}
      
        <div class="form">
          <div class="field">
            <label>Password</label>
            <input type="password" value="" name="customer[password]" id="customer_password" size="16">
          </div>
          <div class="field">
            <label>Password Confirmation</label>
            <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" size="16">
          </div>
          <input type="submit" value="Activate Account" class="button">
          <div class="actions text-center">
            <input type="submit" name="decline" id="customer_decline" value="Decline Invitation" class="decline">
          </div>
        </div>
      
      {% endform %}
      
    </div>
  </div>
</div>