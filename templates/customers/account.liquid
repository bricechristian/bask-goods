<div class="account order-page">
  <div class="container">
    <div class="inner">

      <h1 class="text-center">Order History</h1>

      <div id="customer_sidebar">
        <div id="customer_detail">
          <p class="text-center">{{ customer.name }} ({{ customer.email }})</p>
        </div>
      </div>

      <div id="customer_orders">
        {% if customer.orders.size != 0 %}
        <table border="0">
          <thead>
            <tr>
              <th class="order_number">Order</th>
              <th class="date">Date</th>
              <th class="payment_status">Payment Status</th>
              <th class="fulfillment_status">Fulfillment Status</th>
              <th class="total">Total</th>
            </tr>
          </thead>
          <tbody>
            {% for order in customer.orders %}
            <tr class="{% cycle 'odd', 'even' %} {% if order.cancelled %}cancelled_order{% endif %}">
              <td>{{ order.name | link_to: order.customer_url }}</td>
              <td><span class="note">{{ order.created_at | date: "%b %d, %Y" }}</span></td>
              <td><span class="status_{{ order.financial_status }}">{{ order.financial_status | capitalize }}</span></td>
              <td><span class="status_{{ order.fulfillment_status }}">{{ order.fulfillment_status | capitalize }}</span></td>
              <td><span class="total money">{{ order.total_price | money_without_trailing_zeros }}</span></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        {% else %}
        <p class="note text-center">You haven't placed any orders yet.</p>
        {% endif %}
      </div>

      <div class="actions text-center">
        <p><a id="view_address" href="/account/addresses">Manage Addresses</a></p>
        <p><a href="/account/logout">Logout</a></p>
      </div>

    </div>
  </div>
</div>