<div class="account">
  <div class="container">
    <div class="inner">

      <h1 class="text-center">Sign Up</h1>
      
      <p class="text-center">Create an account to access order history and save your information for faster checkout.</p>
      
      {% form 'create_customer' %}
      
      	{{ form.errors | default_errors }}
      
        <div class="form">
          <div class="field">
            <label>First Name</label>
            <input type="text" value="" name="customer[first_name]" id="first_name" size="30">
          </div>
          <div class="field">
            <label>Last Name</label>
            <input type="text" value="" name="customer[last_name]" id="last_name" size="30">
          </div>
          <div class="field">
            <label>Email Address</label>
            <input type="email" value="" name="customer[email]" id="email" size="30">
          </div>
          <div class="field">
            <label>Password</label>
            <input type="password" value="" name="customer[password]" id="password" size="30">
          </div>
          <input type="submit" value="Create Account" class="button">
          <div class="actions text-center">
            <p>Already have an account? <a href="/account/login">Login here</a></p>
          </div>
        </div>
      
      {% endform %}
      
    </div>
  </div>
</div>