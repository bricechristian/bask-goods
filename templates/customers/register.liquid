{% section 'header-wordmark-brown' %}

<div class="hero access px-7 md:px-10 mt-12 mb-36">
  <div class="py-24 md:max-w-5xl md:mx-auto bg-brand-1 text-brand-2">
    <div class="max-w-xs mx-auto px-4">
      <h1 class="mb-6 font-heading text-3xl text-center">
        Customer Account
      </h1>
      {% form 'create_customer' %}
        {{ form.errors | default_errors }}
        <div><input type="text" value="" name="customer[first_name]" placeholder="First Name" /></div>
        <div><input type="text" value="" name="customer[last_name]" placeholder="Last Name" /></div>
        <div><input type="email" value="" name="customer[email]" placeholder="Email Address" /></div>
        <div><input type="password" value="" name="customer[password]" placeholder="Password" /></div>
        <button class="button">Create</button>
      {% endform %}
    </div>
  </div>
</div>