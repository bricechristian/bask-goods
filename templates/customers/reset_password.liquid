{% section 'header-wordmark-brown' %}

<div class="hero access px-7 md:px-10 mt-12 mb-36">
  <div class="py-24 md:max-w-5xl md:mx-auto bg-brand-1 text-brand-2">
    <div class="max-w-xs mx-auto">
      <h1 class="mb-6 font-heading text-3xl text-center">
        Reset Password
      </h1>
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}
        <div><input type="password" value="" name="customer[password]" placeholder="Password" /></div>
        <div><input type="password" value="" name="customer[password_confirmation]" placeholder="Password Confirmation" /></div>
        <button class="button">Reset</button>
      {% endform %}
    </div>
  </div>
</div>