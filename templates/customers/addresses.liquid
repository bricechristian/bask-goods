{% section 'header-wordmark-brown' %}

<div class="hero account bg-cream pt-40">
  <div class="container-975 pt-20 pb-40 md:py-8 space-y-8">
    <a href="/account/" class="uppercase hover:underline">
      <small>Back to Account</small>
    </a>
    <h1 class="h3 mt-5">My Addresses</h1>
    <div data-address class="w-full md:w-1/2 lg:w-1/3">
      <button type="button" class="button mt-4" data-address-toggle>
        Add New Address
      </button>
      <div data-address-form class="mt-12 hidden">
        <h2>Add New Address</h2>
        {% form 'customer_address', customer.new_address %}
          <div class="mt-3">
            <input type="text"
                  name="address[first_name]"
                  id="AddressFirstNameNew"
                  value="{{ form.first_name }}"
                  autocapitalize="words"
                  placeholder="First Name">
    
            <input type="text"
                  name="address[last_name]"
                  id="AddressLastNameNew"
                  value="{{ form.last_name }}"
                  autocapitalize="words"
                  placeholder="Last Name">
    
            <input type="text"
                  name="address[company]"
                  id="AddressCompanyNew"
                  value="{{ form.company }}"
                  autocapitalize="words"
                  placeholder="Company">
    
            <input type="text"
                  name="address[address1]"
                  id="AddressAddress1New"
                  value="{{ form.address1 }}"
                  autocapitalize="words"
                  placeholder="Address 1">
    
            <input type="text"
                  name="address[address2]"
                  id="AddressAddress2New"
                  value="{{ form.address2 }}"
                  autocapitalize="words"
                  placeholder="Address 2">
    
            <input type="text"
                  name="address[city]"
                  id="AddressCityNew"
                  value="{{ form.city }}"
                  autocapitalize="words"
                  placeholder="City">
    
            <label for="AddressCountryNew" class="inline-block mt-4">
              Country
            </label>
            <select data-address-country
              name="address[country]"
              id="AddressCountryNew"
              data-default="{{ form.country }}">
            </select>
    
            <div data-address-province-wrapper class="hidden">
              <label for="AddressProvinceNew" class="inline-block mt-4">
                Province
              </label>
              <select data-address-province
                name="address[province]"
                id="AddressProvinceNew"
                data-default="{{ form.province }}">
              </select>
            </div>
    
            <input type="text"
                  name="address[zip]"
                  id="AddressZipNew"
                  value="{{ form.zip }}"
                  autocapitalize="characters"
                  placeholder="Zip">
    
            <input type="tel"
                  name="address[phone]"
                  id="AddressPhoneNew"
                  value="{{ form.phone }}"
                  pattern="[0-9\-]*"
                  placeholder="Phone">
          </div>
          <div class="mt-6">
            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_new" class="mt-0 ml-1">
              Set as default address
            </label>
          </div>
          <div class="mt-8">
            <button type="submit" class="button mr-1">Add</button>
            <button type="button" class="button" data-address-toggle>Cancel</button>
          </div>
        {% endform %}
      </div>
    </div>
    <div class="flex flex-wrap -mx-6">
      {% for address in customer.addresses %}
        {% if address == customer.default_address %}
          <div data-address class="w-full mt-14 md:w-1/2 lg:w-1/3 px-6">
            <h2 class="account-title">Default Address</h2>
            {{ address | format_address }}
            <div class="mt-6">
              <button type="button" class="button float-left mr-2" data-address-toggle>Edit</button>
              <form data-address-delete-form method="post" action="/account/addresses/{{ address.id }}">
                <input type="hidden" name="_method" value="delete"/>
                <button class="button">Delete</button>
              </form>
            </div>
            <div data-address-form class="mt-14 hidden">
              {% form 'customer_address', address %}
                <h2>Edit Address</h2>
                <div class="mt-3">
                  <input type="text"
                        name="address[first_name]"
                        id="AddressFirstName_{{ form.id }}"
                        value="{{ form.first_name }}"
                        autocapitalize="words"
                        placeholder="First Name">
        
                  <input type="text"
                        name="address[last_name]"
                        id="AddressLastName_{{ form.id }}"
                        value="{{ form.last_name }}"
                        autocapitalize="words"
                        placeholder="Last Name">
          
                  <input type="text"
                        name="address[company]"
                        id="AddressCompany_{{ form.id }}"
                        value="{{ form.company }}"
                        autocapitalize="words"
                        placeholder="Company">
          
                  <input type="text"
                        name="address[address1]"
                        id="AddressAddress1_{{ form.id }}"
                        value="{{ form.address1 }}"
                        autocapitalize="words"
                        placeholder="Address 1">
          
                  <input type="text"
                        name="address[address2]"
