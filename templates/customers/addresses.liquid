                        pattern="[0-9\-]*"
                        placeholder="Phone">
                </div>
                <div class="mt-6">
                  {{ form.set_as_default_checkbox }}
                  <label for="address_default_address_{{ form.id }}" class="ml-1">
                    Set as default address
                  </label>
                </div>
                <div class="mt-8">
                  <button type="submit" class="button mr-1">Update</button>
                  <button
                    type="button" class="button"
                    data-address-toggle data-form-id="{{ form.id }}">
                    Cancel
                  </button>
                </div>
              {% endform %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
